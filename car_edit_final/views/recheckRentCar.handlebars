<div class="container mt-4">
    <h1>สรุปข้อมูลเช่ารถ {{car.make}} {{ car.model }}</h1>
    <div class="d-flex mt-5 justify-content-center">
        <img src="{{car.picture}}" width="30%">
        <div class="ml-4">
            <h4>รายละเอียดรถ</h4>
            <p class="card-text">รุ่น: {{car.make}}</p>
            <p class="card-text">โมเดล: {{car.model}}</p>
            <p class="card-text">ปี: {{car.year}}</p>
            <p class="card-text">ทะเบียนรถ: {{car.carNo}}</p>
            <p class="card-text">เครื่องยนต์: {{car.type}}</p>
        </div>
    </div>
    <hr>
    <div class="d-flex justify-content-center">
       [ ชื่อผู้เช่ารถ : {{ user.firstname }} {{ user.lastname }} ] | [ อีเมล์ติดต่อ : {{user.email}} ] | [ จำนวนรถที่เช่า : 1 คัน ]
    </div>
    <hr>
    <form action="/rentCar" method="POST">
        <input type="hidden" name="user" value="{{ user._id }}" />
        <input type="hidden" name="car" value="{{ car._id }}" />
        <input type="hidden" name="amountDay" value="{{ detail.amountDay}}" />
        <input type="hidden" name="wherePlace" value="{{ detail.wherePlace }}" />
        <input type="hidden" name="meetArea" value="{{ detail.meetArea }}" />
        <input type="hidden" name="dateTime" value="{{ detail.dateTime }}" />
        <input type="hidden" name="returnDate" value="{{ detail.returnDate }}" />

        <div class="form-group row">
            <label for="staticEmail" class="col-sm-4 col-form-label">จำนวนวันที่ไป</label>
            <div class="col-sm-8">
                <p>{{ detail.amountDay }} วัน</p>
            </div>
        </div>

        <div class="form-group row">
            <label for="staticEmail" class="col-sm-4 col-form-label">ราคา</label>
            <div class="col-sm-8">
                <p>{{ detail.price }} บาท</p>
            </div>
        </div>

        <div class="form-group row">
            <label for="staticEmail" class="col-sm-4 col-form-label">สถานที่ไป</label>
            <div class="col-sm-8">
                <p>{{ detail.wherePlace }}</p>
            </div>
        </div>

        <div class="form-group row">
            <label for="staticEmail" class="col-sm-4 col-form-label">วันเวลาที่ออกเดินทาง</label>
            <div class="col-sm-8">
                <p>{{ detail.dateThai }}</p>
            </div>
        </div>

        <div class="form-group row">
            <label for="staticEmail" class="col-sm-4 col-form-label">จุดนัดพบที่จะออกเดินทาง</label>
            <div class="col-sm-8">
                <p>{{ detail.meetArea }}</p>
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="staticEmail" class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <input type="submit" class="btn btn-primary" value="ชำระเงิน"/>
                <a class="btn btn-danger" href="/showCars">ยกเลิก</a>
            </div>
        </div>
    </form>

</div>